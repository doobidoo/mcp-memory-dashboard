{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "../dist/electron",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["electron", "node"]
  },
  "include": ["./**/*.ts"]
}
